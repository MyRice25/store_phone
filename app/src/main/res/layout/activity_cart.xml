<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Fragment_Cart">

    <TextView
        android:id="@+id/tv_cart_empty"
        android:textStyle="bold"
        android:textSize="32dp"
        android:visibility="gone"
        android:gravity="center"
        android:textColor="@color/colorAlpha"
        android:text="You have no items in your shopping cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_cart"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Shopping Cart"
        android:background="#FFAB40"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_cart"
        android:layout_margin="6dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_cart"
        app:layout_constraintBottom_toTopOf="@id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:id="@+id/layout1"
        android:weightSum="2"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/btn_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="#EF1A1A"
            android:textSize="20sp"
            android:text="Total Amount: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="5dp"
            android:layout_weight="1"
            android:id="@+id/txt_total"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginRight="28dp"
            android:textColor="#15E61F"
            android:textSize="22sp"
            android:text="50.000$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="184dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#19DAF3"
        android:textColor="#000000"
        android:textSize="16dp"
        android:text="Confirm cart"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>